@{
    ViewBag.Title = "XuatNgayDauTuan";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <h3>7.	Viết hàm truyền vào ngày bất kỳ, trả về ngày đầu tuần (thứ 2 của tuần đó)</h3>
    <form action="/Home/XuLyXuatNgayDauTuan" method="post" style="display:inline-block">
        <div>
            <table class="table">
                <tr>
                    <td>
                        <span style="font-size:17px;font-weight:bold;">Nhập ngày</span>
                    </td>
                    <td>
                        <input type="text" class="form-control" name="txtNgay" />
                    </td>
                    <td>
                        <span style="font-size:17px;font-weight:bold;">Nhập tháng</span>
                    </td>
                    <td>
                        <input type="text" class="form-control" name="txtThang" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <span style="font-size:17px;font-weight:bold;">Nhập năm</span>
                    </td>
                    <td>
                        <input type="text" class="form-control" name="txtNam" />
                    </td>
                    <td>
                        <input type="submit" value="Xuất ngày đầu tuần" class="btn btn-danger" />
                    </td>
                </tr>
            </table>
        </div>
    </form>
    <div>
        <span style="font-size:17px;font-weight:bold;">@ViewBag.kq</span>
    </div>
</div>

